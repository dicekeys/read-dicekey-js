{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "esnext",
      "noImplicitThis": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "rootDirs": ["src"],
      "baseUrl": "./src",
      "paths": {
        "*" : ["./node_modules/@types", "./node_modules/", "src/@types/*", "src"],        
        "~*": ["./src/*"]
      },
      "sourceMap": true,
      "outDir": "dist"
    },
    "include": ["src/**/*"],
    "lib": ["node", "es6", "webworker"]
  }